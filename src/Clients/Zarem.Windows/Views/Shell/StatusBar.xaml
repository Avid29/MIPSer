<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="Zarem.Windows.Views.Shell.StatusBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Zarem.Windows.Views.Shell"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ctc="using:CommunityToolkit.WinUI.Controls"
    xmlns:cth="using:CommunityToolkit.WinUI.Helpers"
    xmlns:convert="using:Zarem.Windows.Converters"
    xmlns:helpers="using:Zarem.Windows.Helpers"
    mc:Ignorable="d">

    <UserControl.Resources>
        <convert:BuildStatusColorConverter x:Key="BuildStatusColorConverter"
                                           NotReady="{ThemeResource NotReadyStatusBarBackgroundColor}"
                                           Ready="{ThemeResource ReadyStatusBarBackgroundColor}"
                                           Running="{ThemeResource RunningStatusBarBackgroundColor}"
                                           Done="{ThemeResource DoneStatusBarBackgroundColor}"
                                           Failed="{ThemeResource FailedStatusBarBackgroundColor}"/>
    </UserControl.Resources>

    <Grid Padding="8,0,8,2">
        <Grid.Background>
            <SolidColorBrush x:Name="BackgroundBrush" Color="{x:Bind ViewModel.BuildStatus, Converter={StaticResource BuildStatusColorConverter}, Mode=OneWay}"/>
        </Grid.Background>

        <StackPanel Orientation="Horizontal" Spacing="12">
            <TextBlock Text="{x:Bind helpers:LocalizationHelper.Localize(ViewModel.BuildStatus), Mode=OneWay}"
                       cth:ContrastHelper.Opponent="{x:Bind BackgroundBrush.Color, Mode=OneWay}"
                       HorizontalAlignment="Left" VerticalAlignment="Center"/>

            <TextBlock Text="{x:Bind ViewModel.StatusMessage, Mode=OneWay}"
                       cth:ContrastHelper.Opponent="{x:Bind BackgroundBrush.Color, Mode=OneWay}"
                       HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="12" Margin="0,2,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>
