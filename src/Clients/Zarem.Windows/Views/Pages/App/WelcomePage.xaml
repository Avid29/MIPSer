<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="Zarem.Windows.Views.Pages.App.WelcomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid VerticalAlignment="Top"
          HorizontalAlignment="Center"
          Margin="36,64">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Image Source="{StaticResource AppIconLarge}"
               Height="150"
               Margin="16,8"
               VerticalAlignment="Center"/>

        <StackPanel VerticalAlignment="Top"
                    Margin="0,24"
                    Grid.Column="1"
                    Grid.ColumnSpan="2">
            <TextBlock x:Uid="/Welcome/WelcomeToZaremTB"
                       Text="Welcome to Zarem"
                       FontSize="56"
                       FontFamily="{StaticResource ShareTech}"
                       TextWrapping="WrapWholeWords"/>
            <TextBlock x:Uid="/Welcome/AlphaTB"
                       Text="Alpha"
                       FontSize="48"
                       FontFamily="{StaticResource ShareTech}"
                       FontStyle="Italic"
                       TextWrapping="WrapWholeWords">
                <TextBlock.Foreground>
                    <LinearGradientBrush>
                        <GradientStop Color="#5838FA" Offset="0"/>
                        <GradientStop Color="#034AC9" Offset="1"/>
                    </LinearGradientBrush>
                </TextBlock.Foreground>
            </TextBlock>
        </StackPanel>

        <StackPanel VerticalAlignment="Top"
                    Margin="0,64"
                    Grid.Row="2"
                    Grid.ColumnSpan="2">
            <TextBlock x:Uid="/Welcome/GettingReadyTB"
                       Text="We're still getting ready..."
                       TextWrapping="WrapWholeWords"
                       FontSize="22"/>
            <TextBlock x:Uid="/Welcome/GettingReadyDescriptionTB"
                       Text="This is an alpha release missing significant functionality. Check us out on GitHub to see what's coming soon!"
                       FontSize="12"
                       Opacity=".8"
                       TextWrapping="WrapWholeWords"/>
            <HyperlinkButton x:Uid="/Welcome/GitHubLinkHB"
                             Content="GitHub Link"
                             NavigateUri="https://github.com/Avid29/Zarem"
                             FontSize="12"
                             Margin="0"
                             Padding="0,4"/>
        </StackPanel>
        
        
        <Image Source="{ThemeResource TrafficConeIcon}"
               VerticalAlignment="Center"
               Height="64"
               Grid.Column="2"
               Grid.Row="1"/>
    </Grid>
</UserControl>
