<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="Zarem.Windows.Views.Pages.Editor.TextEditorPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:editor="using:Zarem.Windows.Controls.CodeEditor"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <UserControl.Resources>
        <editor:AssemblySyntaxHighlightingTheme x:Name="SyntaxHighlighting" />
    </UserControl.Resources>

    <Grid FlowDirection="LeftToRight">
        <editor:CodeEditor
            x:Name="CodeEditor"
            x:Load="{x:Bind UseTextEditor, Mode=OneWay}"
            Text="{x:Bind ViewModel.Content, Mode=TwoWay}" />
        <editor:AssemblyEditor
            x:Name="AssemblyEditor"
            x:Load="{x:Bind UseAssemblyEditor, Mode=OneWay}"
            AnnotationThreshold="{x:Bind ViewModel.AnnotationThreshold, Mode=OneWay}"
            AssemblerConfig="{x:Bind ViewModel.AssemblerConfig, Mode=OneWay}"
            RealTimeAssembly="{x:Bind ViewModel.AssembleRealTime, Mode=OneWay}"
            SyntaxHighlightingTheme="{StaticResource SyntaxHighlighting}"
            Text="{x:Bind ViewModel.Content, Mode=TwoWay}" />
    </Grid>
</UserControl>
