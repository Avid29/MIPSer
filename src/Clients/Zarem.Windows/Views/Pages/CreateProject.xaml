<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="Zarem.Windows.Views.Pages.CreateProject"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:helpers="using:Zarem.Windows.Helpers"
    xmlns:ienums="using:Zarem.Models.Instructions.Enums"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Uid="/Pages/CreateProject/CreateANewProjectTB"
                   Text="Create a new project"
                   TextTrimming="CharacterEllipsis"
                   Margin="32,16" FontSize="26"/>

        <ScrollViewer Grid.Row="1" Margin="32,0" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="32,0" Spacing="16">
                <TextBox x:Uid="/Pages/CreateProject/ProjectNameTBox"
                         Header="Project Name" PlaceholderText="Cool Project Name"
                         Text="{x:Bind ViewModel.ProjectName, Mode=TwoWay}"/>
                <Grid ColumnSpacing="8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox x:Uid="/Pages/CreateProject/FolderTBox"
                             Header="Folder" PlaceholderText="Path" IsReadOnly="True"
                             Text="{x:Bind ViewModel.FolderPath, Mode=OneWay}"/>
                    <Button x:Uid="/Pages/CreateProject/SelectFolderBTN"
                            Grid.Column="1" Content="Select Folder" VerticalAlignment="Bottom"
                            Command="{x:Bind ViewModel.SelectFolderCommand, Mode=OneWay}"/>
                </Grid>

                <ComboBox x:Uid="/Pages/CreateProject/MipsVersionCB" Header="Mips Version"
                          SelectedItem="{x:Bind ViewModel.MipsVersion, Mode=TwoWay}"
                          ItemsSource="{x:Bind ViewModel.MipsVersionOptions, Mode=OneWay}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate x:DataType="ienums:MipsVersion">
                            <TextBlock Text="{x:Bind helpers:LocalizationHelper.Localize((ienums:MipsVersion)), Mode=OneWay}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Spacing="4" Grid.Row="2" HorizontalAlignment="Right"
                    Orientation="Horizontal"
                    Margin="64,16">
            <Button x:Uid="CreateBTN" Content="Create"
                    Command="{x:Bind ViewModel.CreateProjectCommand, Mode=OneWay}"
                    IsEnabled="{x:Bind ViewModel.ReadyToCreate, Mode=OneWay}"
                    Style="{StaticResource AccentButtonStyle}"/>
            <Button x:Uid="CancelBTN" Content="Cancel"
                    Command="{x:Bind ViewModel.CancelCommand, Mode=OneWay}"/>
        </StackPanel>
    </Grid>
</UserControl>
