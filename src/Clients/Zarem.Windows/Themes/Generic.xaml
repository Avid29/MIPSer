<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Zarem.Windows"
    xmlns:mctrl="using:Zarem.Windows.Controls">

    <Style TargetType="mctrl:EditableTextBlock">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="mctrl:EditableTextBlock">
                    <Grid>
                        <TextBlock x:Name="PART_TextBlock" Text="{TemplateBinding Text}"/>
                        <TextBox x:Name="PART_TextBox" PlaceholderText="{TemplateBinding PlaceholderText}" HorizontalAlignment="Stretch"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
