<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Zarem.Windows.Controls.CodeEditor"
    xmlns:editor="using:WinUIEditor">

    <Style TargetType="local:CodeEditor">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:CodeEditor">
                    <Grid CornerRadius="{TemplateBinding CornerRadius}">
                        <editor:CodeEditorControl x:Name="PART_CodeEditorControl"
                                                  Background="{TemplateBinding Background}"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
