<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="Mipser.Windows.Views.CheatSheet"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:collections="using:CommunityToolkit.Mvvm.Collections"
    xmlns:data="using:MIPS.Assembler.Models.Instructions"
    xmlns:models="using:Mipser.Models.CheatSheet"
    xmlns:convert="using:Mipser.Windows.Converter"
    xmlns:helper="using:Mipser.Windows.Helpers"
    xmlns:cheat="using:Mipser.Windows.Controls.CheatSheet"
    FlowDirection="LeftToRight"
    mc:Ignorable="d">
    
    <UserControl.Resources>
        <FontFamily x:Key="HappyMonkey">ms-appx:///Assets/Fonts/HappyMonkey-Regular.ttf#Happy Monkey</FontFamily>
        
        <SolidColorBrush x:Key="PrimaryBackground" Color="#1A1A1A"/>
        <SolidColorBrush x:Key="HeaderForeground" Color="#8C8C8C"/>

        <!--Colors-->
        <Color x:Key="Color1">#FE8482</Color>
        <Color x:Key="Color2">#FFC47A</Color>
        <Color x:Key="Color3">#F8FC8B</Color>
        <Color x:Key="Color4">#A7FA95</Color>
        <Color x:Key="Color5">#73EEFD</Color>
        <Color x:Key="Color6">#77A7FD</Color>
        <Color x:Key="Color7">#9B88FC</Color>
        <Color x:Key="Color8">#FA9EF6</Color>
        
        <!--Instruction Types-->
        <SolidColorBrush x:Key="RInst" Color="{StaticResource Color1}"/>
        <SolidColorBrush x:Key="R2Inst" Color="{StaticResource Color2}"/>
        <SolidColorBrush x:Key="IInst" Color="{StaticResource Color5}"/>
        <SolidColorBrush x:Key="JInst" Color="{StaticResource Color4}"/>
        <SolidColorBrush x:Key="RegImmInst" Color="{StaticResource Color8}"/>
        <SolidColorBrush x:Key="CoProc0Inst" Color="{StaticResource Color3}"/>
        <SolidColorBrush x:Key="CoProc1Inst" Color="{StaticResource Color3}"/>
        <SolidColorBrush x:Key="CoProc1XInst" Color="{StaticResource Color7}"/>
        <SolidColorBrush x:Key="CoProcIInst" Color="{StaticResource Color6}"/>
        
        <!--Argument Types-->
        <SolidColorBrush x:Key="GPRArg" Color="{StaticResource Color1}"/>
        <SolidColorBrush x:Key="CPRArg" Color="{StaticResource Color2}"/>
        <SolidColorBrush x:Key="ImmArg" Color="{StaticResource Color3}"/>
        <SolidColorBrush x:Key="FormatArg" Color="{StaticResource Color8}"/>
        <SolidColorBrush x:Key="MiscArg" Color="{StaticResource Color7}"/>
        
        <!--Sections Types-->
        <SolidColorBrush x:Key="OpCodeSection" Color="{StaticResource Color4}"/>
        <SolidColorBrush x:Key="FuncCodeSection" Color="{StaticResource Color5}"/>
        <SolidColorBrush x:Key="RegFuncCodeSection" Color="{StaticResource Color8}"/>
        <SolidColorBrush x:Key="GPRSection" Color="{StaticResource Color1}"/>
        <SolidColorBrush x:Key="CPRSection" Color="{StaticResource Color2}"/>
        <SolidColorBrush x:Key="ImmSection" Color="{StaticResource Color3}"/>
        <SolidColorBrush x:Key="FormatSection" Color="{StaticResource Color7}"/>
        <LinearGradientBrush x:Key="GeneralOrCoRegisterSection" StartPoint="0.5,0" EndPoint="0.5,1">
            <GradientStopCollection>
                <GradientStop Color="{StaticResource Color1}" Offset="0"/>
                <GradientStop Color="{StaticResource Color2}" Offset="1"/>
            </GradientStopCollection>
        </LinearGradientBrush>

        <helper:InstructionTypeBrushPalette x:Key="InstructionBrushPalette"
                                            RType="{StaticResource RInst}"
                                            R2Type="{StaticResource R2Inst}"
                                            IType="{StaticResource IInst}"
                                            JType="{StaticResource JInst}"
                                            RegImmediate="{StaticResource RegImmInst}"
                                            CoProcessor0="{StaticResource CoProc0Inst}"
                                            CoProcessor1="{StaticResource CoProc1Inst}"/>

        <helper:ArgumentBrushPalette x:Key="ArgumentBrushPalette"
                                     GPRegisterBrush="{StaticResource GPRArg}"
                                     CPRegisterBrush="{StaticResource CPRArg}"
                                     ImmediateValueBrush="{StaticResource ImmArg}"
                                     FormatBrush="{StaticResource FormatArg}"
                                     MiscArgBrush="{StaticResource MiscArg}"/>

        <helper:EncodingPatternSectionBrushPalette x:Key="SectionBrushPalette"
                                                   OpCodeBrush="{StaticResource OpCodeSection}"
                                                   FuncCodeBrush="{StaticResource FuncCodeSection}"
                                                   RegisterFuncCodeBrush="{StaticResource RegFuncCodeSection}"
                                                   GPRegisterBrush="{StaticResource GPRSection}"
                                                   CPRegisterBrush="{StaticResource CPRSection}"
                                                   ImmediateValueBrush="{StaticResource ImmSection}"
                                                   FormatBrush="{StaticResource FormatSection}"
                                                   GeneralOrCoRegisterBrush="{StaticResource GeneralOrCoRegisterSection}"/>
        
        <DataTemplate x:Key="InstructionGroupHeaderTemplate" x:DataType="collections:IReadOnlyObservableGroup">
            <TextBlock
                FontSize="16" FontFamily="{StaticResource HappyMonkey}"
                Foreground="{ThemeResource HeaderForeground}"
                Text="{x:Bind Key}" />
        </DataTemplate>
        
        <DataTemplate x:Key="InstructionEntryTemplate" x:DataType="data:InstructionMetadata">
            <cheat:UsagePatternDisplay Metadata="{x:Bind}" FontSize="14" FontFamily="Cascadia Code"
                                          InstructionBrushPalette="{StaticResource InstructionBrushPalette}"
                                          ArgumentBrushPalette="{StaticResource ArgumentBrushPalette}"/>
        </DataTemplate>
        
        <DataTemplate x:Key="EncodingPatternDisplayTemplate" x:DataType="models:EncodingPattern">
            <StackPanel>
                <TextBlock Text="{x:Bind Name, Mode=OneWay}" Foreground="{StaticResource HeaderForeground}" Margin="0,2" FontFamily="{StaticResource HappyMonkey}"/>
                <cheat:EncodingPatternDisplay EncodingPattern="{x:Bind}" SectionBrushPalette="{StaticResource SectionBrushPalette}"
                                              FontFamily="{StaticResource HappyMonkey}"/>
            </StackPanel>
        </DataTemplate>

            <Style x:Key="SectionBorderStyle" TargetType="Border">
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="8"/>
        </Style>
        
        <Style TargetType="ListViewHeaderItem">
            <Setter Property="MinHeight" Value="0"/>
            <Setter Property="Padding" Value="8,4,8,0"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListViewHeaderItem">
                        <ContentPresenter x:Name="ContentPresenter"
                                          Margin="{TemplateBinding Padding}"
                                          Content="{TemplateBinding Content}"
                                          ContentTemplate="{TemplateBinding ContentTemplate}"
                                          ContentTransitions="{TemplateBinding ContentTransitions}"
                                          HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style TargetType="ListViewItem">
            <Setter Property="MinHeight" Value="0"/>
            <Setter Property="Padding" Value="8,1"/>
            <Setter Property="FlowDirection" Value="LeftToRight"/>
        </Style>
        
        <CollectionViewSource
            x:Name="CommonInstructionsViewSource"
            IsSourceGrouped="True"
            Source="{x:Bind ViewModel.CommonInstructions, Mode=OneWay}" />
        <CollectionViewSource
            x:Name="FloatInstructionsViewSource"
            IsSourceGrouped="True"
            Source="{x:Bind ViewModel.FloatInstructions, Mode=OneWay}" />
        <CollectionViewSource
            x:Name="CoProc0InstructionsViewSource"
            IsSourceGrouped="True"
            Source="{x:Bind ViewModel.CoProc0Instructions, Mode=OneWay}" />
        <CollectionViewSource
            x:Name="SpecializedInstructionsViewSource"
            IsSourceGrouped="True"
            Source="{x:Bind ViewModel.Specialized0Instructions, Mode=OneWay}" />
        
    </UserControl.Resources>
    
    <ScrollViewer VerticalScrollMode="Enabled" HorizontalScrollMode="Enabled" ZoomMode="Enabled"
                  VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Visible"
                  Background="{StaticResource PrimaryBackground}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid Padding="500">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="648"/>
                <ColumnDefinition Width="648"/>
                <ColumnDefinition Width="648"/>
                <ColumnDefinition Width="648"/>
                <ColumnDefinition Width="1000"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            
            <!--Common Instructions-->
            <Border Style="{StaticResource SectionBorderStyle}" BorderBrush="White">
                <StackPanel>
                    <TextBlock x:Uid="CommonInstructionsTB" Text="Common Instructions" Margin="8,0" FontFamily="{StaticResource HappyMonkey}"/>
                    <ListView ItemsSource="{x:Bind CommonInstructionsViewSource.View, Mode=OneWay}" SelectionMode="None"
                              ScrollViewer.IsHorizontalRailEnabled="False" ScrollViewer.IsVerticalRailEnabled="False"
                              ItemTemplate="{StaticResource InstructionEntryTemplate}">
                        <ListView.GroupStyle>
                            <GroupStyle HidesIfEmpty="True" HeaderTemplate="{StaticResource InstructionGroupHeaderTemplate}"/>
                        </ListView.GroupStyle>
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel HorizontalAlignment="Left"
                                            Padding="8"/>
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                    </ListView>
                </StackPanel>
            </Border>
            
            <!--Common Encoding-->
            <Border Style="{StaticResource SectionBorderStyle}" BorderBrush="{StaticResource Color3}"
                    Grid.Column="1">
                <StackPanel>
                    <TextBlock x:Uid="PrimaryInstructionTypePatternsTB" Text="Primary Instruction Types Encoding Patterns" FontFamily="{StaticResource HappyMonkey}"/>
                    <ItemsRepeater ItemsSource="{x:Bind ViewModel.PrimaryEncodingPatterns, Mode=OneWay}" Margin="16,0" ItemTemplate="{StaticResource EncodingPatternDisplayTemplate}"/>

                </StackPanel>
            </Border>
            
            <!--Floating-Point Instructions-->
            <Border Style="{StaticResource SectionBorderStyle}" BorderBrush="White"
                    Grid.Column="2">
                <StackPanel>
                    <TextBlock x:Uid="FloatInstructionsTB" Text="Floating-Point Instructions" Margin="8,0" FontFamily="{StaticResource HappyMonkey}"/>
                    <ListView ItemsSource="{x:Bind FloatInstructionsViewSource.View, Mode=OneWay}" SelectionMode="None"
                              ScrollViewer.IsHorizontalRailEnabled="False" ScrollViewer.IsVerticalRailEnabled="False"
                              ItemTemplate="{StaticResource InstructionEntryTemplate}">
                        <ListView.GroupStyle>
                            <GroupStyle HidesIfEmpty="True" HeaderTemplate="{StaticResource InstructionGroupHeaderTemplate}"/>
                        </ListView.GroupStyle>
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel HorizontalAlignment="Left"
                                            Padding="8"/>
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                    </ListView>
                </StackPanel>
            </Border>
            
            <!--Floating-Point Encoding-->
            <Border Style="{StaticResource SectionBorderStyle}" BorderBrush="{StaticResource Color3}"
                    Grid.Column="3">
                <StackPanel>
                    <TextBlock x:Uid="PrimaryInstructionTypePatternsTB" Text="Primary Instruction Types Encoding Patterns" FontFamily="{StaticResource HappyMonkey}"/>
                    <ItemsRepeater ItemsSource="{x:Bind ViewModel.CoProcessor1Patterns, Mode=OneWay}" Margin="16,0" ItemTemplate="{StaticResource EncodingPatternDisplayTemplate}"/>

                </StackPanel>
            </Border>
            
            <!--CoProcessor0 Instructions-->
            <Border Style="{StaticResource SectionBorderStyle}" BorderBrush="White"
                    Grid.Row="1">
                <StackPanel>
                    <TextBlock x:Uid="CoProc0InstructionsTB" Text="CoProcessor0 Instructions" Margin="8,0" FontFamily="{StaticResource HappyMonkey}"/>
                    <ListView ItemsSource="{x:Bind CoProc0InstructionsViewSource.View, Mode=OneWay}" SelectionMode="None"
                              ScrollViewer.IsHorizontalRailEnabled="False" ScrollViewer.IsVerticalRailEnabled="False"
                              ItemTemplate="{StaticResource InstructionEntryTemplate}">
                        <ListView.GroupStyle>
                            <GroupStyle HidesIfEmpty="True" HeaderTemplate="{StaticResource InstructionGroupHeaderTemplate}"/>
                        </ListView.GroupStyle>
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel HorizontalAlignment="Left"
                                            Padding="8"/>
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                    </ListView>
                </StackPanel>
            </Border>
            
            <!--CoProcessor0 Encoding-->
            <Border Style="{StaticResource SectionBorderStyle}" BorderBrush="{StaticResource Color3}"
                    Grid.Row="1" Grid.Column="1" >
                <StackPanel>
                    <TextBlock x:Uid="PrimaryInstructionTypePatternsTB" Text="CoProcessor0 Instruction Types Encoding Patterns" FontFamily="{StaticResource HappyMonkey}"/>
                    <ItemsRepeater ItemsSource="{x:Bind ViewModel.CoProcessor0Patterns, Mode=OneWay}" Margin="16,0"
                                   ItemTemplate="{StaticResource EncodingPatternDisplayTemplate}"/>
                </StackPanel>
            </Border>
            
            <!--Specialized Instructions-->
            <Border Style="{StaticResource SectionBorderStyle}" BorderBrush="White"
                    Grid.Row="1" Grid.Column="2">
                <StackPanel>
                    <TextBlock x:Uid="SpecializedInstructionsTB" Text="Specialized Instructions" Margin="8,0" FontFamily="{StaticResource HappyMonkey}"/>
                    <ListView ItemsSource="{x:Bind SpecializedInstructionsViewSource.View, Mode=OneWay}" SelectionMode="None"
                              ScrollViewer.IsHorizontalRailEnabled="False" ScrollViewer.IsVerticalRailEnabled="False"
                              ItemTemplate="{StaticResource InstructionEntryTemplate}">
                        <ListView.GroupStyle>
                            <GroupStyle HidesIfEmpty="True" HeaderTemplate="{StaticResource InstructionGroupHeaderTemplate}"/>
                        </ListView.GroupStyle>
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel HorizontalAlignment="Left"
                                            Padding="8"/>
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                    </ListView>
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl>
