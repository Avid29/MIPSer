<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="Mipser.Windows.Views.Pages.ErrorList"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ctc="using:CommunityToolkit.WinUI.Controls"
    xmlns:logger="using:MIPS.Assembler.Logging"
    xmlns:logenum="using:MIPS.Assembler.Logging.Enum"
    mc:Ignorable="d">

    <ListView ItemsSource="{x:Bind ViewModel.Messages, Mode=OneWay}" SelectionMode="None" IsItemClickEnabled="True">
        <ListView.Header>
            <ctc:DataTable>
                <!-- Severity Icon -->
                <ctc:DataColumn CanResize="True" MinWidth="50" MaxWidth="50"/>
                <ctc:DataColumn x:Uid="MessageDC" Content="Message"
                                CanResize="True" MinWidth="200"/>
                <!--<ctc:DataColumn x:Uid="FileDC" Content="File" CanResize="True"/>-->
            </ctc:DataTable>
        </ListView.Header>
        <ListView.ItemTemplate>
            <DataTemplate x:DataType="logger:Log">
                <ctc:DataRow HorizontalAlignment="Left">
                    <ctc:SwitchPresenter TargetType="logenum:Severity" Value="{x:Bind Severity, Mode=OneWay}">
                        <ctc:Case Value="Error">
                            <ImageIcon Width="16" Source="/Assets/Icons/Severity/Error.svg"/>
                        </ctc:Case>
                        <ctc:Case Value="Warning">
                            <ImageIcon Width="16" Source="/Assets/Icons/Severity/Warning.svg"/>
                        </ctc:Case>
                        <ctc:Case Value="Message">
                            <ImageIcon Width="16" Source="/Assets/Icons/Severity/Message.svg"/>
                        </ctc:Case>
                    </ctc:SwitchPresenter>
                    <RichTextBlock>
                        <Paragraph>
                            <Run Text="{x:Bind Message, Mode=OneWay}"/>
                        </Paragraph>
                    </RichTextBlock>
                    <!--<TextBlock Text="{x:Bind , Mode=OneWay}"/>-->
                </ctc:DataRow>
            </DataTemplate>
        </ListView.ItemTemplate>
        <ListView.ItemContainerStyle>
            <Style BasedOn="{StaticResource DefaultListViewItemStyle}"
                   TargetType="ListViewItem">
                <Setter Property="Padding" Value="0" />
                <Setter Property="HorizontalContentAlignment" Value="Left" />
            </Style>
        </ListView.ItemContainerStyle>
    </ListView>
</UserControl>
