<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="Mipser.Windows.Views.Pages.App.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:Mipser.Windows.Views.Pages.App"
    xmlns:ctc="using:CommunityToolkit.WinUI.Controls"
    xmlns:helpers="using:Mipser.Windows.Helpers"
    xmlns:senums="using:Mipser.Services.Settings.Enums"
    mc:Ignorable="d">

    <ScrollViewer>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="1280"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="RootPanel.MaxWidth" Value="2000"/>
                        <Setter Target="LeftGutter.Width" Value="0.5*"/>
                        <Setter Target="RightGutter.Width" Value="0.5*"/>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        
        <Grid Margin="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="LeftGutter" Width="auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition x:Name="RightGutter" Width="auto"/>
            </Grid.ColumnDefinitions>
            <StackPanel x:Name="RootPanel" Grid.Column="1" MaxWidth="800">
                <StackPanel.ChildrenTransitions>
                    <EntranceThemeTransition FromVerticalOffset="50" IsStaggeringEnabled="True" />
                </StackPanel.ChildrenTransitions>

                <!--  Theme Settings  -->
                <TextBlock x:Uid="/Settings/ThemeSettingsHeaderTB"
                           Text="Theme Settings"
                           Margin="0,0,0,4"/>
                
                <ctc:SettingsCard x:Uid="/Settings/AppThemeSC"
                              Header="Theme"
                              Description="Change the app's theme.">
                    <ComboBox SelectedItem="{x:Bind ViewModel.AppTheme, Mode=TwoWay}"
                          ItemsSource="{x:Bind ViewModel.AppThemeOptions, Mode=OneWay}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate x:DataType="senums:Theme">
                                <TextBlock Text="{x:Bind helpers:LocalizationHelper.Localize((senums:Theme)), Mode=OneWay}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </ctc:SettingsCard>

                <!--  Editor Settings  -->
                <TextBlock x:Uid="/Settings/EditorSettingsHeaderTB"
                           Text="Editor Settings"
                           Margin="0,16,0,4"/>

                <ctc:SettingsCard x:Uid="/Settings/RealTimeAssemblySC"
                              Header="Real-Time Assembly"
                              Description="Should the editor continuously assemble the open file to show errors in real-time?">
                    <ToggleSwitch IsOn="{x:Bind ViewModel.RealTimeAssembly, Mode=TwoWay}"/>
                </ctc:SettingsCard>

                <!--  Localization Settings  -->
                <TextBlock x:Uid="/Settings/LocalizationSettingsHeaderTB"
                           Text="Localization Settings"
                           Margin="0,16,0,4"/>
                
                <ctc:SettingsCard x:Uid="/Settings/AppLanguageSC"
                              Header="App Language"
                              Description="Set the app's display language. (Requires a restart to take effect).">
                    <ComboBox SelectedItem="{x:Bind ViewModel.LanguageOverride, Mode=TwoWay}"
                          ItemsSource="{x:Bind ViewModel.AppLanguageOptions, Mode=OneWay}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate x:DataType="x:String">
                                <TextBlock Text="{x:Bind local:SettingsPage.LanguageDisplayName((x:String)), Mode=OneWay}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </ctc:SettingsCard>
                
                <ctc:SettingsCard x:Uid="/Settings/AssemblerLanguageSC"
                              Header="Assembler Language"
                              Description="Set the language used by for assembler log information.">
                    <ComboBox SelectedItem="{x:Bind ViewModel.AssemblerLanguageOverride, Mode=TwoWay}"
                          ItemsSource="{x:Bind ViewModel.AssemblerLanguageOptions, Mode=OneWay}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate x:DataType="x:String">
                                <TextBlock Text="{x:Bind local:SettingsPage.LanguageDisplayName((x:String)), Mode=OneWay}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </ctc:SettingsCard>

                <!--  About  -->
                <TextBlock x:Uid="/Settings/AboutHeaderTB"
                           Text="About"
                           Margin="0,16,0,4"/>
                <ctc:SettingsExpander x:Uid="/Settings/AboutSE"
                                      Header="MIPSer"
                                      Description="Â© Avishai Dernis">
                    <ctc:SettingsExpander.HeaderIcon>
                        <ImageIcon Source="/Assets/AppIconSources/Small88x88.png"/>
                    </ctc:SettingsExpander.HeaderIcon>
                    <ctc:SettingsExpander.Content>
                        <TextBlock Text="{x:Bind ViewModel.AppVersion, Mode=OneWay}"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                   IsTextSelectionEnabled="True"/>
                    </ctc:SettingsExpander.Content>
                    <ctc:SettingsExpander.Items>
                        <ctc:SettingsCard HorizontalContentAlignment="Left"
                                          ContentAlignment="Left">
                            <StackPanel Margin="-24,0,0,0">
                                <HyperlinkButton x:Uid="/Settings/ViewOnGitHubHB"
                                                 Content="View on GitHub"
                                                 NavigateUri="https://github.com/Avid29/MIPSer"/>
                            </StackPanel>
                        </ctc:SettingsCard>
                    </ctc:SettingsExpander.Items>
                </ctc:SettingsExpander>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>
