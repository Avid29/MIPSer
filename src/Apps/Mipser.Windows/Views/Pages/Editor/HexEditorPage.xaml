<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="Mipser.Windows.Views.Pages.Editor.HexEditorPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hexbox="using:HexBox.WinUI"
    xmlns:local="using:Mipser.Windows.Views.Pages.Editor"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <hexbox:HexBox DataSource="{x:Bind ViewModel.BinaryReader, Mode=OneWay}" />
    </Grid>
</UserControl>
