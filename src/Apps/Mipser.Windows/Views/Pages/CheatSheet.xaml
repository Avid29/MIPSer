<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="Mipser.Windows.Views.Pages.CheatSheet"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:collections="using:CommunityToolkit.Mvvm.Collections"
    xmlns:data="using:MIPS.Assembler.Models.Instructions"
    xmlns:models="using:Mipser.Models.CheatSheet"
    xmlns:reg="using:MIPS.Models.Instructions.Enums.Registers"
    xmlns:convert="using:Mipser.Windows.Converters"
    xmlns:helper="using:Mipser.Windows.Helpers"
    xmlns:cheat="using:Mipser.Windows.Controls.CheatSheet"
    xmlns:tables="using:MIPS.Assembler.Helpers.Tables"
    Loaded="UserControl_Loaded"
    mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Dark">
                    <SolidColorBrush x:Key="CheatSheetBackgroundBrush" Color="#101010"/>
                    <SolidColorBrush x:Key="CheatSheetPanelBackgroundBrush" Color="#1A1A1A"/>
                </ResourceDictionary>
                <ResourceDictionary x:Key="Light">
                    <SolidColorBrush x:Key="CheatSheetBackgroundBrush" Color="#E5E5E5"/>
                    <SolidColorBrush x:Key="CheatSheetPanelBackgroundBrush" Color="#FFFFFF"/>
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>

            <FontFamily x:Key="HappyMonkey">ms-appx:///Assets/Fonts/HappyMonkey-Regular.ttf#Happy Monkey</FontFamily>

            <SolidColorBrush x:Key="HeaderForeground" Color="#8C8C8C"/>

            <!--Colors-->
            <Color x:Key="Color1">#FE8482</Color>
            <Color x:Key="Color2">#FFC47A</Color>
            <Color x:Key="Color3">#F8FC8B</Color>
            <Color x:Key="Color4">#A7FA95</Color>
            <Color x:Key="Color5">#73EEFD</Color>
            <Color x:Key="Color6">#77A7FD</Color>
            <Color x:Key="Color7">#9B88FC</Color>
            <Color x:Key="Color8">#FA9EF6</Color>

            <!--Instruction Types-->
            <SolidColorBrush x:Key="RInst" Color="{StaticResource Color1}"/>
            <SolidColorBrush x:Key="R2Inst" Color="{StaticResource Color2}"/>
            <SolidColorBrush x:Key="IInst" Color="{StaticResource Color5}"/>
            <SolidColorBrush x:Key="JInst" Color="{StaticResource Color4}"/>
            <SolidColorBrush x:Key="RegImmInst" Color="{StaticResource Color8}"/>
            <SolidColorBrush x:Key="CoProc0Inst" Color="{StaticResource Color3}"/>
            <SolidColorBrush x:Key="CoProc1Inst" Color="{StaticResource Color3}"/>
            <SolidColorBrush x:Key="CoProc1XInst" Color="{StaticResource Color7}"/>
            <SolidColorBrush x:Key="CoProcIInst" Color="{StaticResource Color6}"/>

            <!--Argument Types-->
            <SolidColorBrush x:Key="GPRArg" Color="{StaticResource Color1}"/>
            <SolidColorBrush x:Key="CPRArg" Color="{StaticResource Color2}"/>
            <SolidColorBrush x:Key="ImmArg" Color="{StaticResource Color3}"/>
            <SolidColorBrush x:Key="FormatArg" Color="{StaticResource Color8}"/>
            <SolidColorBrush x:Key="MiscArg" Color="{StaticResource Color7}"/>

            <!--Sections Types-->
            <SolidColorBrush x:Key="OpCodeSection" Color="{StaticResource Color4}"/>
            <SolidColorBrush x:Key="FuncCodeSection" Color="{StaticResource Color5}"/>
            <SolidColorBrush x:Key="RegFuncCodeSection" Color="{StaticResource Color8}"/>
            <SolidColorBrush x:Key="GPRSection" Color="{StaticResource Color1}"/>
            <SolidColorBrush x:Key="CPRSection" Color="{StaticResource Color2}"/>
            <SolidColorBrush x:Key="ImmSection" Color="{StaticResource Color3}"/>
            <SolidColorBrush x:Key="FormatSection" Color="{StaticResource Color7}"/>

            <!--Register Encoding Types-->
            <SolidColorBrush x:Key="SavedRegister" Color="{StaticResource Color5}"/>
            <SolidColorBrush x:Key="TempRegister" Color="{StaticResource Color1}"/>
            <SolidColorBrush x:Key="ArgRegister" Color="{StaticResource Color8}"/>
            <SolidColorBrush x:Key="ReturnValueRegister" Color="{StaticResource Color4}"/>
            <SolidColorBrush x:Key="ReturnAddressRegister" Color="{StaticResource Color2}"/>
            <SolidColorBrush x:Key="EnvironmentRegister" Color="{StaticResource Color6}"/>
            <SolidColorBrush x:Key="KernelRegister" Color="{StaticResource Color3}"/>
            <SolidColorBrush x:Key="OtherRegister" Color="{StaticResource Color7}"/>

            <LinearGradientBrush x:Key="GeneralOrCoRegisterSection" StartPoint="0.5,0" EndPoint="0.5,1">
                <GradientStopCollection>
                    <GradientStop Color="{StaticResource Color1}" Offset="0"/>
                    <GradientStop Color="{StaticResource Color2}" Offset="1"/>
                </GradientStopCollection>
            </LinearGradientBrush>

            <helper:InstructionTypeBrushPalette x:Key="InstructionBrushPalette"
                                            RType="{StaticResource RInst}"
                                            R2Type="{StaticResource R2Inst}"
                                            IType="{StaticResource IInst}"
                                            JType="{StaticResource JInst}"
                                            RegImmediate="{StaticResource RegImmInst}"
                                            CoProcessor0="{StaticResource CoProc0Inst}"
                                            CoProcessor1="{StaticResource CoProc1Inst}"/>

            <helper:ArgumentBrushPalette x:Key="ArgumentBrushPalette"
                                     GPRegisterBrush="{StaticResource GPRArg}"
                                     CPRegisterBrush="{StaticResource CPRArg}"
                                     ImmediateValueBrush="{StaticResource ImmArg}"
                                     FormatBrush="{StaticResource FormatArg}"
                                     MiscArgBrush="{StaticResource MiscArg}"/>

            <helper:EncodingPatternSectionBrushPalette x:Key="SectionBrushPalette"
                                                   OpCodeBrush="{StaticResource OpCodeSection}"
                                                   FuncCodeBrush="{StaticResource FuncCodeSection}"
                                                   RegisterFuncCodeBrush="{StaticResource RegFuncCodeSection}"
                                                   GPRegisterBrush="{StaticResource GPRSection}"
                                                   CPRegisterBrush="{StaticResource CPRSection}"
                                                   ImmediateValueBrush="{StaticResource ImmSection}"
                                                   FormatBrush="{StaticResource FormatSection}"
                                                   GeneralOrCoRegisterBrush="{StaticResource GeneralOrCoRegisterSection}"/>

            <convert:RegisterEncodingColorConverter x:Key="RegisterEncodingColorConverter"
                                                SavedBrush="{StaticResource SavedRegister}"
                                                TempBrush="{StaticResource TempRegister}"
                                                ArgBrush="{StaticResource ArgRegister}"
                                                ReturnValueBrush="{StaticResource ReturnValueRegister}"
                                                ReturnAddressBrush="{StaticResource ReturnAddressRegister}"
                                                EnvironmentBrush="{StaticResource EnvironmentRegister}"
                                                KernelBrush="{StaticResource KernelRegister}"
                                                OtherBrush="{StaticResource OtherRegister}"/>

            <DataTemplate x:Key="InstructionGroupHeaderTemplate" x:DataType="collections:IReadOnlyObservableGroup">
                <TextBlock
                FontSize="16" FontFamily="{StaticResource HappyMonkey}"
                Foreground="{ThemeResource HeaderForeground}"
                Text="{x:Bind Key}" />
            </DataTemplate>

            <DataTemplate x:Key="InstructionEntryTemplate" x:DataType="data:InstructionMetadata">
                <cheat:UsagePatternDisplay Metadata="{x:Bind}" FontSize="14" FontFamily="Cascadia Code"
                                          InstructionBrushPalette="{StaticResource InstructionBrushPalette}"
                                          ArgumentBrushPalette="{StaticResource ArgumentBrushPalette}"/>
            </DataTemplate>

            <DataTemplate x:Key="EncodingPatternDisplayTemplate" x:DataType="models:EncodingPattern">
                <StackPanel>
                    <TextBlock Text="{x:Bind Name}" Foreground="{StaticResource HeaderForeground}" Margin="0,2" FontFamily="{StaticResource HappyMonkey}"/>
                    <cheat:EncodingPatternDisplay EncodingPattern="{x:Bind}" SectionBrushPalette="{StaticResource SectionBrushPalette}"
                                                  FontFamily="{StaticResource HappyMonkey}"/>
                </StackPanel>
            </DataTemplate>

            <DataTemplate x:Key="RegisterEncodingCellTemplate" x:DataType="reg:GPRegister">
                <Border Background="{x:Bind (reg:GPRegister), Converter={StaticResource RegisterEncodingColorConverter}}"
                    CornerRadius="4" Margin="1">
                    <TextBlock Text="{x:Bind tables:RegistersTable.GetRegisterString((reg:GPRegister), reg:RegisterSet.GeneralPurpose)}" Foreground="Black"
                           HorizontalAlignment="Center" VerticalAlignment="Center"
                           FontFamily="{StaticResource HappyMonkey}" FontSize="18"/>
                </Border>
            </DataTemplate>

            <Style x:Key="SectionBorderStyle" TargetType="Border">
                <Setter Property="Margin" Value="8"/>
                <Setter Property="Padding" Value="10,8"/>
                <Setter Property="BorderThickness" Value="2"/>
                <Setter Property="CornerRadius" Value="8"/>
                <Setter Property="Background" Value="{ThemeResource CheatSheetPanelBackgroundBrush}"/>
            </Style>

            <Style TargetType="ListViewHeaderItem">
                <Setter Property="MinHeight" Value="0"/>
                <Setter Property="Padding" Value="8,8,8,0"/>
                <Setter Property="Margin" Value="0"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ListViewHeaderItem">
                            <ContentPresenter x:Name="ContentPresenter"
                                          Margin="{TemplateBinding Padding}"
                                          Content="{TemplateBinding Content}"
                                          ContentTemplate="{TemplateBinding ContentTemplate}"
                                          ContentTransitions="{TemplateBinding ContentTransitions}"
                                          HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style TargetType="ListViewItem">
                <Setter Property="MinHeight" Value="0"/>
                <Setter Property="Padding" Value="8,1"/>
                <Setter Property="FlowDirection" Value="LeftToRight"/>
            </Style>

            <CollectionViewSource x:Name="CommonInstructionsViewSource"
                                  IsSourceGrouped="True"
                                  Source="{x:Bind ViewModel.CommonInstructions, Mode=OneWay}" />
            <CollectionViewSource x:Name="FloatInstructionsViewSource"
                                  IsSourceGrouped="True"
                                  Source="{x:Bind ViewModel.FloatInstructions, Mode=OneWay}" />
            <CollectionViewSource x:Name="CoProc0InstructionsViewSource"
                                  IsSourceGrouped="True"
                                  Source="{x:Bind ViewModel.CoProc0Instructions, Mode=OneWay}" />
            <CollectionViewSource x:Name="SpecializedInstructionsViewSource"
                                  IsSourceGrouped="True"
                                  Source="{x:Bind ViewModel.Specialized0Instructions, Mode=OneWay}" />
        </ResourceDictionary>
    </UserControl.Resources>

    <ScrollViewer>
        <StackPanel HorizontalAlignment="Stretch" Margin="48,16" Spacing="4">
            <StackPanel.ChildrenTransitions>
                <EntranceThemeTransition FromVerticalOffset="50" IsStaggeringEnabled="True" />
                <RepositionThemeTransition IsStaggeringEnabled="False" />
            </StackPanel.ChildrenTransitions>
            <TextBlock x:Uid="InstructionUsageTablesTB"
                       Text="Instruction Usage Tables"
                       FontFamily="{StaticResource HappyMonkey}"
                       Margin="0,4"/>
            <Expander HorizontalAlignment="Stretch">
                <Expander.Header>
                    <TextBlock x:Uid="CommonInstructionsTB"
                               Text="Common Instructions"
                               FontFamily="{StaticResource HappyMonkey}"
                               Margin="8,0"/>
                </Expander.Header>
                <ListView ItemsSource="{x:Bind CommonInstructionsViewSource.View, Mode=OneWay}" SelectionMode="None"
                          ScrollViewer.IsHorizontalRailEnabled="False" ScrollViewer.IsVerticalRailEnabled="False"
                          ItemTemplate="{StaticResource InstructionEntryTemplate}">
                    <ListView.GroupStyle>
                        <GroupStyle HidesIfEmpty="True" HeaderTemplate="{StaticResource InstructionGroupHeaderTemplate}"/>
                    </ListView.GroupStyle>
                </ListView>
            </Expander>
            <Expander HorizontalAlignment="Stretch">
                <Expander.Header>
                    <TextBlock x:Uid="CoProc0InstructionsTB"
                               Text="CoProcessor0 Instructions"
                               FontFamily="{StaticResource HappyMonkey}"
                               Margin="8,0"/>
                </Expander.Header>
                <ListView ItemsSource="{x:Bind CoProc0InstructionsViewSource.View, Mode=OneWay}" SelectionMode="None"
                              ItemTemplate="{StaticResource InstructionEntryTemplate}">
                    <ListView.GroupStyle>
                        <GroupStyle HidesIfEmpty="True" HeaderTemplate="{StaticResource InstructionGroupHeaderTemplate}"/>
                    </ListView.GroupStyle>
                </ListView>
            </Expander>
            <Expander HorizontalAlignment="Stretch">
                <Expander.Header>
                    <TextBlock x:Uid="FloatInstructionsTB"
                               Text="Floating-Point Instructions"
                               FontFamily="{StaticResource HappyMonkey}"
                               Margin="8,0"/>
                </Expander.Header>
                <ListView ItemsSource="{x:Bind FloatInstructionsViewSource.View, Mode=OneWay}" SelectionMode="None"
                              ItemTemplate="{StaticResource InstructionEntryTemplate}">
                    <ListView.GroupStyle>
                        <GroupStyle HidesIfEmpty="True" HeaderTemplate="{StaticResource InstructionGroupHeaderTemplate}"/>
                    </ListView.GroupStyle>
                </ListView>
            </Expander>
            <Expander HorizontalAlignment="Stretch">
                <Expander.Header>
                    <TextBlock x:Uid="SpecializedInstructionsTB"
                               Text="Specialized Instructions"
                               FontFamily="{StaticResource HappyMonkey}"
                               Margin="8,0"/>
                </Expander.Header>
                <ListView ItemsSource="{x:Bind SpecializedInstructionsViewSource.View, Mode=OneWay}" SelectionMode="None"
                              ItemTemplate="{StaticResource InstructionEntryTemplate}">
                    <ListView.GroupStyle>
                        <GroupStyle HidesIfEmpty="True" HeaderTemplate="{StaticResource InstructionGroupHeaderTemplate}"/>
                    </ListView.GroupStyle>
                </ListView>
            </Expander>

            <TextBlock x:Uid="InstructionEncodingPatternsTB"
                       Text="Instruction Encoding Patterns"
                       FontFamily="{StaticResource HappyMonkey}"
                       Margin="0,12,0,4"/>
            <Expander HorizontalAlignment="Stretch">
                <Expander.Header>
                    <TextBlock x:Uid="PrimaryInstructionTypePatternsTB"
                               Text="Primary Instruction Types Encoding Patterns"
                               FontFamily="{StaticResource HappyMonkey}"
                               TextTrimming="CharacterEllipsis"
                               Margin="8,0" />
                </Expander.Header>
                <ItemsRepeater ItemsSource="{x:Bind ViewModel.PrimaryEncodingPatterns, Mode=OneWay}"
                               ItemTemplate="{StaticResource EncodingPatternDisplayTemplate}"
                               Margin="24,0"/>
            </Expander>
            <Expander HorizontalAlignment="Stretch">
                <Expander.Header>
                    <TextBlock x:Uid="CoProc0InstructionTypePatternsTB"
                               Text="CoProcessor0 Instruction Types Encoding Patterns"
                               FontFamily="{StaticResource HappyMonkey}"
                               TextTrimming="CharacterEllipsis"
                               Margin="8,0" />
                </Expander.Header>
                <ItemsRepeater ItemsSource="{x:Bind ViewModel.CoProcessor0Patterns, Mode=OneWay}"
                               ItemTemplate="{StaticResource EncodingPatternDisplayTemplate}"
                               Margin="24,0"/>
            </Expander>
            <Expander HorizontalAlignment="Stretch">
                <Expander.Header>
                    <TextBlock x:Uid="CoProc1InstructionTypePatternsTB"
                               Text="Floating-Point CoProcessor Instruction Types Encoding Patterns"
                               FontFamily="{StaticResource HappyMonkey}"
                               TextTrimming="CharacterEllipsis"
                               Margin="8,0"/>
                </Expander.Header>
                <ItemsRepeater ItemsSource="{x:Bind ViewModel.CoProcessor1Patterns, Mode=OneWay}"
                               ItemTemplate="{StaticResource EncodingPatternDisplayTemplate}"
                               Margin="24,0"/>
            </Expander>
            <Expander HorizontalAlignment="Stretch">
                <Expander.Header>
                    <TextBlock x:Uid="UniqueInstructionPatternsTB"
                               Text="Unique Instruction Encoding Patterns"
                               FontFamily="{StaticResource HappyMonkey}"
                               TextTrimming="CharacterEllipsis"
                               Margin="8,0"/>
                </Expander.Header>
                <ItemsRepeater ItemsSource="{x:Bind ViewModel.UniquePatterns, Mode=OneWay}"
                               ItemTemplate="{StaticResource EncodingPatternDisplayTemplate}"
                               Margin="24,0"/>
            </Expander>

            <TextBlock x:Uid="EncodingTablesTB"
                       Text="Encoding Tables"
                       FontFamily="{StaticResource HappyMonkey}"
                       Margin="0,12,0,4"/>
            <Expander HorizontalAlignment="Stretch">
                <Expander.Header>
                    <TextBlock x:Uid="GeneralPurposeRegisterEncodingTB"
                               Text="General Purpose Register Encoding"
                               FontFamily="{StaticResource HappyMonkey}"
                               TextTrimming="CharacterEllipsis"
                               Margin="8,0" />
                </Expander.Header>
                <cheat:EncodingTableDisplay x:Name="RegisterEncodingTable" Rows="8" Columns="4"
                            FontFamily="{StaticResource HappyMonkey}" HorizontalAlignment="Center"
                            CellTemplate="{StaticResource RegisterEncodingCellTemplate}"/>
            </Expander>
        </StackPanel>
    </ScrollViewer>
</UserControl>
