<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="Mipser.Windows.Views.Shell.PanelView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:pages="using:Mipser.Windows.Views.Pages"
    xmlns:ctc="using:CommunityToolkit.WinUI.Controls"
    xmlns:vmv="using:Mipser.ViewModels.Pages"
    xmlns:vmva="using:Mipser.ViewModels.Pages.Abstract"
    xmlns:selectors="using:Mipser.Windows.Selectors"
    GotFocus="UserControl_GotFocus"
    mc:Ignorable="d">

    <UserControl.Resources>
        <selectors:PageTemplateSelector x:Key="PageTemplateSelector">
            <selectors:PageTemplateSelector.CheatSheetPageTemplate>
                <DataTemplate x:DataType="vmv:CheatSheetViewModel">
                    <pages:CheatSheet/>
                </DataTemplate>
            </selectors:PageTemplateSelector.CheatSheetPageTemplate>
            <selectors:PageTemplateSelector.FilePageTemplate>
                <DataTemplate x:DataType="vmv:FilePageViewModel">
                    <pages:FileViewer/>
                </DataTemplate>
            </selectors:PageTemplateSelector.FilePageTemplate>
        </selectors:PageTemplateSelector>
    </UserControl.Resources>

    <TabView SelectedItem="{x:Bind ViewModel.CurrentPage, Mode=TwoWay}" TabItemsSource="{x:Bind ViewModel.OpenPages, Mode=OneWay}"
             TabCloseRequested="TabView_TabCloseRequested" IsAddTabButtonVisible="False" VerticalAlignment="Stretch">
        <TabView.TabItemTemplate>
            <DataTemplate x:DataType="vmva:PageViewModel">
                <!--* for unsaved and italics for anonymous-->
                <TabViewItem Header="{x:Bind Title, Mode=OneWay}">
                    <ContentControl Content="{x:Bind (vmva:PageViewModel), Mode=OneWay}"
                                    ContentTemplateSelector="{StaticResource PageTemplateSelector}"
                                    CornerRadius="8"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"
                                    HorizontalContentAlignment="Stretch"
                                    VerticalContentAlignment="Stretch"/>

                </TabViewItem>
            </DataTemplate>
        </TabView.TabItemTemplate>
    </TabView>
</UserControl>
