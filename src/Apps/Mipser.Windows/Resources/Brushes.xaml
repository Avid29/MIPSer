<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Key="Dark">

            <!--  Background Colors  -->
            <Color x:Key="TitleBarBackgroundColor">#222024</Color>
            <Color x:Key="TabViewBackgroundColor">#131215</Color>
            <Color x:Key="PrimaryBackgroundColor">#131215</Color>
            <SolidColorBrush x:Key="PrimaryBackgroundBrush" Color="{ThemeResource PrimaryBackgroundColor}"/>
            <AcrylicBrush x:Key="TitleBarBackgroundBrush" TintColor="{ThemeResource TitleBarBackgroundColor}" TintOpacity="0.8"/>
            <AcrylicBrush x:Key="TabViewBackgroundBrush" TintColor="{ThemeResource TabViewBackgroundColor}" TintOpacity="0.8"/>
            <AcrylicBrush x:Key="SideBarBackgroundBrush" TintColor="#161518" TintOpacity="0.5"/>

            <!--  Syntax Highlighting -->
            <Color x:Key="InstructionHighlightColor">#A7FA95</Color>
            <Color x:Key="RegisterHighlightColor">#FE8482</Color>
            <Color x:Key="ImmediateHighlightColor">#F8FC8B</Color>
            <Color x:Key="ReferenceHighlightColor">#73EEFD</Color>
            <Color x:Key="OperatorHighlightColor">#77A7FD</Color>
            <Color x:Key="DirectiveHighlightColor">#FA9EF6</Color>
            <Color x:Key="StringHighlightColor">#FFC47A</Color>
            <Color x:Key="CommentHighlightColor">#9B88FC</Color>
            <Color x:Key="MacroHighlightColor">#BF472F</Color>

            <!--  Indicator Colors  -->
            <Color x:Key="ErrorUnderlineColor">#FF0000</Color>
            <Color x:Key="WarningUnderlineColor">#FFAA00</Color>
            <Color x:Key="MessageUnderlineColor">#00AAFF</Color>
            
            <!--  Status Bar Background Colors  -->
            <!--<Color x:Key="NotReadyStatusBarBackgroundColor">#747F8D</Color>
            <Color x:Key="ReadyStatusBarBackgroundColor">#1f4d7a</Color>
            <Color x:Key="RunningStatusBarBackgroundColor">#966003</Color>
            <Color x:Key="DoneStatusBarBackgroundColor">#297050</Color>
            <Color x:Key="FailedStatusBarBackgroundColor">#950404</Color>-->

        </ResourceDictionary>
        <ResourceDictionary x:Key="Light">

            <!--  Background Colors  -->
            <Color x:Key="TitleBarBackgroundColor">#E0E0E0</Color>
            <Color x:Key="TabViewBackgroundColor">#E8E8E8</Color>
            <Color x:Key="PrimaryBackgroundColor">#FFFFFF</Color>
            <SolidColorBrush x:Key="PrimaryBackgroundBrush" Color="{ThemeResource PrimaryBackgroundColor}"/>
            <AcrylicBrush x:Key="TitleBarBackgroundBrush" TintColor="{ThemeResource TitleBarBackgroundColor}" TintOpacity="0.8"/>
            <AcrylicBrush x:Key="TabViewBackgroundBrush" TintColor="{ThemeResource TabViewBackgroundColor}" TintOpacity="0.8"/>
            <AcrylicBrush x:Key="SideBarBackgroundBrush" TintColor="#F0F0F0" TintOpacity="0.75"/>

            <!--  Syntax Highlighting -->
            <Color x:Key="InstructionHighlightColor">#166105</Color>
            <Color x:Key="RegisterHighlightColor">#7e0301</Color>
            <Color x:Key="ImmediateHighlightColor">#909504</Color>
            <Color x:Key="ReferenceHighlightColor">#028597</Color>
            <Color x:Key="OperatorHighlightColor">#022d7e</Color>
            <Color x:Key="DirectiveHighlightColor">#61055c</Color>
            <Color x:Key="StringHighlightColor">#804600</Color>
            <Color x:Key="CommentHighlightColor">#17037c</Color>
            <Color x:Key="MacroHighlightColor">#d25e46</Color>

            <!--  Indicator Colors  -->
            <Color x:Key="ErrorUnderlineColor">#FF0000</Color>
            <Color x:Key="WarningUnderlineColor">#FFAA00</Color>
            <Color x:Key="MessageUnderlineColor">#00AAFF</Color>

            <!--  Status Bar Background Colors  -->
            <!--<Color x:Key="NotReadyStatusBarBackgroundColor">#747F8D</Color>
            <Color x:Key="ReadyStatusBarBackgroundColor">#85b3e0</Color>
            <Color x:Key="RunningStatusBarBackgroundColor">#fcc669</Color>
            <Color x:Key="DoneStatusBarBackgroundColor">#8fd6b6</Color>
            <Color x:Key="FailedStatusBarBackgroundColor">#fb6a6a</Color>-->

        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>

    <!-- Status Bar -->
    <Color x:Key="NotReadyStatusBarBackgroundColor">#747F8D</Color>
    <Color x:Key="ReadyStatusBarBackgroundColor">#1f4d7a</Color>
    <Color x:Key="RunningStatusBarBackgroundColor">#966003</Color>
    <Color x:Key="DoneStatusBarBackgroundColor">#297050</Color>
    <Color x:Key="FailedStatusBarBackgroundColor">#950404</Color>

</ResourceDictionary>
