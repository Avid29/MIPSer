<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Mipser.Windows.Controls.AssemblyEditBox"
    xmlns:editor="using:WinUIEditor">

    <Style TargetType="local:AssemblyEditBox">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:AssemblyEditBox">
                    <Grid CornerRadius="{TemplateBinding CornerRadius}">
                        <editor:CodeEditorControl x:Name="CodeEditor"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
