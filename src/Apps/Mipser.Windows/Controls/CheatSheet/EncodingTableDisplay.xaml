<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="Mipser.Windows.Controls.CheatSheet.EncodingTableDisplay"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sys="using:System"
    xmlns:local="using:Mipser.Windows.Controls.CheatSheet"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    
    <UserControl.Resources>
        <DataTemplate x:Name="LabelTemplate" x:DataType="local:Label">
            <Grid Width="64" Height="32">
                <TextBlock Text="{x:Bind local:EncodingTableDisplay.GetLabel(Index, Count)}"
                           FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                <TextBlock Text="{x:Bind Index}" FontSize="12" Opacity=".6"
                           HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
            </Grid>
        </DataTemplate>
    </UserControl.Resources>

    <Grid x:Name="TableGrid"/>

</UserControl>
