<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="Mipser.Windows.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:shell="using:Mipser.Windows.Views.Shell"
    xmlns:views="using:Mipser.Windows.Views"
    mc:Ignorable="d">

    <Grid Background="{StaticResource PrimaryBackground}">

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>


        <!--Title Bar-->
        <shell:TitleBar/>

        <Grid Grid.Row="1">

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="280"/>
            </Grid.ColumnDefinitions>

            <!--Content View-->
            <shell:OpenFilesView/>

            <shell:Explorer Grid.Column="1"/>
        </Grid>
        
        <Grid Grid.RowSpan="2">
            <views:CheatSheet Visibility="{x:Bind ViewModel.IsCheatSheetOpen, Mode=OneWay}"/>
        </Grid>
    </Grid>
</Window>
